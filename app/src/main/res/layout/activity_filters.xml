<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/template"
        android:layout_width="368dp"
        android:layout_height="618dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_fin_b_fund_preto" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="33dp"
        android:layout_height="64dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector" />

    <TextView
        android:id="@+id/filters"
        android:layout_width="90dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:text="Filtrs"
        android:textColor="#03045E"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button01"
        android:layout_width="321dp"
        android:layout_height="47dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#03045E"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rosto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/template"
        app:srcCompat="@drawable/subtract" />

    <TextView
        android:id="@+id/disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="Disciplina"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/template"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <TextView
        android:id="@+id/semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:text="Nota da AP1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/disciplina"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <TextView
        android:id="@+id/ap2"
        android:layout_width="115dp"
        android:layout_height="33dp"
        android:layout_marginTop="360dp"
        android:text="Nota da AP2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/semestre"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <TextView
        android:id="@+id/dados_do_semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Dados do semestre"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="@+id/template"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <EditText
        android:id="@+id/caixaAp2"
        android:layout_width="179dp"
        android:layout_height="42dp"
        android:layout_marginTop="420dp"
        android:hint=""
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="@+id/template"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <EditText
        android:id="@+id/caixaAp1"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/rectangle_37"
        android:hint=""
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="@+id/template"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <EditText
        android:id="@+id/caixaDisciplina"
        android:layout_width="182dp"
        android:layout_height="45dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/rectangle_37"
        android:hint="Digite algo aqui"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="@+id/template"
        app:layout_constraintTop_toTopOf="@+id/template" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="304dp"
        android:layout_height="2dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/template"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="@+id/template"
        app:layout_constraintTop_toTopOf="@+id/template"
        app:srcCompat="@drawable/line_1" />


</androidx.constraintlayout.widget.ConstraintLayout>