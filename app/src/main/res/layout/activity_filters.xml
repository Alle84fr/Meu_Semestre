<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/template"
        android:layout_width="352dp"
        android:layout_height="881dp"
        app:srcCompat="@drawable/img_fin_b_fund_preto"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="-41dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="33dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/vector"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/filters"
        android:layout_width="90dp"
        android:layout_height="49dp"
        android:text="Filtrs"
        android:textColor="#03045E"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="30dp" />

    <Button
        android:id="@+id/button01"
        android:layout_width="321dp"
        android:layout_height="47dp"
        android:backgroundTint="#03045E"
        android:text="Enviar"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="607dp" />

    <ImageView
        android:id="@+id/rosto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/subtract"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/disciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disciplina"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota da AP1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="338dp" />

    <TextView
        android:id="@+id/ap2"
        android:layout_width="115dp"
        android:layout_height="33dp"
        android:text="Nota da AP2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="459dp" />

    <TextView
        android:id="@+id/dados_do_semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados do semestre"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="140dp" />

    <EditText
        android:id="@+id/caixaAp2"
        android:layout_width="179dp"
        android:layout_height="42dp"
        android:hint=""
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="509dp" />

    <EditText
        android:id="@+id/caixaAp1"
        android:layout_width="178dp"
        android:layout_height="40dp"
       android:background="@drawable/rectangle_37"
        android:hint=""
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="396dp" />

    <EditText
        android:id="@+id/caixaDisciplina"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:background="@drawable/rectangle_37"
        android:hint="Digite algo aqui"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="273dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="304dp"
        android:layout_height="2dp"
        app:srcCompat="@drawable/line_1"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="195dp" />


</androidx.constraintlayout.widget.ConstraintLayout>