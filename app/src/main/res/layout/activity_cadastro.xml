<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <ImageView
        android:id="@+id/img_cad_cinza"
        android:layout_width="275dp"
        android:layout_height="505dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="78dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_cad_cinza" />

    <TextView
        android:id="@+id/txt_cad_titu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="48dp"

        android:text="Cadastro"
        android:textColor="#050000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/img_cad_cinza"
        app:layout_constraintTop_toTopOf="@+id/img_cad_cinza" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cad_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/btn_cad_botao_out"
        android:paddingBottom="20dp"
        android:text="voltar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cad_cinza" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cad_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="83dp"
        android:background="@drawable/btn_cad_botao_out"
        android:paddingBottom="20dp"
        android:text="cadastrar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cad_cinza" />

    <EditText
        android:id="@+id/editText_cad_nome"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="208dp"
        android:background="@drawable/img_cad_b_fund_preto"
        android:ems="10"
        android:hint="Name:"
        android:inputType="text"
        android:paddingLeft="35dp"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="yes"/>

    <EditText
        android:id="@+id/editText_cad_email"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/img_cad_b_fund_preto"
        android:ems="10"
        android:hint="E-mail: "
        android:inputType="textEmailAddress"
        android:paddingLeft="35dp"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_cad_nome"
        android:importantForAccessibility="yes"/>

    <EditText
        android:id="@+id/editText_cad_password"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/img_cad_b_fund_preto"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:paddingLeft="35dp"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_cad_email"
        android:importantForAccessibility="yes"/>

    <!--plaintext - texto simples
    Number (decimal) numeros
    textInputLayout - contêibner  que melhora a aparência do texto  - -->


</androidx.constraintlayout.widget.ConstraintLayout>